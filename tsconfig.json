    "strict": true,
    "alwaysStrict": true,
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es2017",
    "lib": [
      "es7",
      "es2017.object"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
